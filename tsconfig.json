{

  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    
    "allowJs": true,
    "skipLibCheck": true,   
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "target": "esnext",
    "module": "commonjs",
    "incremental": true,
    "esModuleInterop": true,     
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true
  },
  
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "packages/*/src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
